<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="H1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">4px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50px</item>
    </style>

    <style name="H2" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginTop">18px</item>
        <item name="android:layout_marginBottom">5px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40px</item>
    </style>

    <style name="H3" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@drawable/selection</item>
        <item name="android:layout_margin">4px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32px</item>
    </style>

    <style name="ITEM_TO_ITEM_TITLE" parent="@style/H2">
        <item name="android:textColor">#5fff</item>
    </style>

    <style name="ITEM" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">70px</item>
    </style>
    <style name="SMALL_ITEM" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#9fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50px</item>
    </style>
</resources>